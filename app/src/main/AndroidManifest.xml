<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tare2k">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_label"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".microbus_info"
            android:label="@string/microbus_info_activity_title" />
        <activity android:name=".make_your_route"
            android:label="@string/make_your_route_activity_title" />
        <activity android:name=".favourited"
            android:label="@string/title_activity_favourited" />
        <activity android:name=".choose_your_route"
            android:label="@string/Choose_your_route__activity_title"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.example.android.tare2k"
            android:name=".DataAndUtillity.MicrobusesProvider"
            android:exported="false"/>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
</manifest>

